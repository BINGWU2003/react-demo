{
  "name": "zhi-yi-tong",
  "private": true,
  "version": "1.2.3",
  "main": "./src-electron/main.js",
  "scripts": {
    "dev": "chcp 65001 & vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:build": "vite build && electron-builder --win --ia32"
  },
  "build": {
    "productName": "智衣通打印服务",
    "appId": "com.zhi-yi-tong",
    "copyright": "智衣科技 © 2024",
    "compression": "maximum",
    "asar": true,
    "directories": {
      "output": "release/"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "智衣通打印服务"
    },
    "win": {
      "icon": "./public/logo.ico",
      "artifactName": "${productName}-v${version}-${platform}-setup.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ],
      "certificateFile": "./cert/certificate.pfx",
      "certificatePassword": "1034291441",
      "verifyUpdateCodeSignature": false,
      "signingHashAlgorithms": [
        "sha256"
      ]
    },
    "mac": {
      "icon": "./public/logo.ico",
      "artifactName": "${productName}-v${version}-${platform}-setup.${ext}"
    },
    "linux": {
      "icon": "./public/logo.ico",
      "artifactName": "${productName}-v${version}-${platform}-setup.${ext}"
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "axios": "^1.7.2",
    "dayjs": "^1.11.13",
    "mqtt": "^5.10.4",
    "vue": "^3.4.31",
    "vue-plugin-hiprint": "^0.0.56",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.5",
    "electron": "^21.0.0",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.2.0",
    "sass": "^1.77.8",
    "sugarss": "^4.0.1",
    "vite": "^5.3.4",
    "vite-plugin-electron": "^0.28.7"
  }
}
